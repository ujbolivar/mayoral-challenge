{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "typeRoots": ["node_modules/@types", "/@types"],
        "baseUrl": "./src",
        "paths": {
            "@/components/*": ["components/*"],
            "@/pages/*": ["pages/*"],
            "@/lib/*": ["lib/*"],
            "@styles/*": ["styles/*"],
            "@/types/*": ["types/*"],
            "@/utils/*": ["utils/*"],
            "@/helpers/*": ["helpers/*"]
        },
        "incremental": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.graphql",
        "**/*.gql",
        "**/*.json",
        "__test__"
    ],
    "exclude": ["node_modules"]
}
